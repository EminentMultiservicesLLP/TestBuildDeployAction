
@model CGHSBilling.Areas.HospitalForms.Models.RequestSubmissionModel
<script src="~/Scripts/common.js"></script>
<style>
    .SelectedcssEven {
        color: #23700c;
        /*font-weight: bold;*/
        font-size: 15px;
    }
    .OtherscssEven {
        color: #4169e1;
        /*font-weight: bold;*/
        font-size: 13px;
    }

</style>

@using (Html.BeginForm())
{
    <fieldset>
    <div class="panel-group">
        <div class="panel-heading">
            <div class="panel-title">
                <a class="collapsediv" data-toggle="collapse" href="#SearchGridArea" style="color: white">
                    Generated Request
                </a>
            </div>
        </div>
    </div>

    <div id="SearchGridArea" class="panel-collapse collapse in" aria-expanded="true">
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-12">
                    <div id="GeneratedRequestGrid"></div>
                </div>
            </div>

        </div>
    </div>

    <div class="panel-group" id="EntryForm">
        <div class="panel panel-default">
            <div class="panel-body entryAreabackgroundCSSforinsideElement">
                <div class="row">
                    <div class="col-sm-1">
                        @Html.Label("Request No", new {@class = "required"})
                        @Html.TextBoxFor(m => m.RequestNo, new {@class = "form-control"})
                        @Html.HiddenFor(m => m.RequestId)
                    </div>
                    <div class="col-sm-1">
                        @Html.Label("File No", new {@class = "required"})
                        @Html.TextBoxFor(m => m.FileNo, new {@class = "form-control", onfocus = "onFocusOfElement(this.id)"})
                    </div>
                    <div class="col-sm-2">
                        @Html.Label("Hospital Type", new {@class = "required"})
                        @Html.DropDownList("ddlHospitalType", new SelectList(string.Empty, "Value", "Text"), "Select", new {@class = "form-control", onfocus = "onFocusOfElement(this.id)"})
                    </div>
                    <div class="col-sm-2">
                        @Html.Label("Patient Type", new {@class = "required"})
                        @Html.DropDownList("ddlPatientType", new SelectList(string.Empty, "Value", "Text"), "Select", new {@class = "form-control", onfocus = "onFocusOfElement(this.id)"})
                    </div>
                    <div class="col-sm-1">
                        @Html.Label("State", new {@class = "required"})
                        @Html.DropDownList("ddlState", new SelectList(string.Empty, "Value", "Text"), "Select", new {@class = "form-control", onfocus = "onFocusOfElement(this.id)"})
                    </div>
                    <div class="col-sm-1">
                        @Html.Label("City", new {@class = "required"})
                        @Html.DropDownList("ddlCity", new SelectList(string.Empty, "Value", "Text"), "Select", new {@class = "form-control", onfocus = "onFocusOfElement(this.id)"})
                    </div>
                    <div class="col-sm-2">
                        @Html.Label("Admission Type", new {@class = "required"})
                        @Html.DropDownList("ddlTypeOfAddmission", new SelectList(string.Empty, "Value", "Text"), "Select", new {@class = "form-control", onfocus = "onFocusOfElement(this.id)"})
                    </div>
                </div>
            </div><br/>
            <div class="panel-body entryAreabackgroundCSSforinsideElement">

                <div class="row ">
                    <div class="col-sm-2">
                        @Html.Label("Patient Name", new {@class = "required"})
                        @Html.TextBoxFor(m => m.PatientName, new {@class = "form-control", onfocus = "onFocusOfElement(this.id)"})
                    </div>
                    <div class="col-sm-1">
                        @Html.Label("Age", new {@class = "required"})
                        @Html.TextBoxFor(m => m.PatientAge, new {@class = "form-control", onfocus = "onFocusOfElement(this.id)"})
                    </div>
                    <div class="col-sm-1">
                        @Html.Label("Gender", new {@class = "required"})
                        @Html.DropDownList("ddlPatientgender", new SelectList(string.Empty, "Value", "Text"), "Select", new {@class = "form-control", onfocus = "onFocusOfElement(this.id)"})
                    </div>
                    <div class="col-sm-2">
                        @Html.Label("Address", new {@class = "required"})
                        @Html.TextBoxFor(m => m.PatientAddress, new {@class = "form-control", onfocus = "onFocusOfElement(this.id)"})
                    </div>
                    <div class="col-sm-1">
                        @Html.Label("IPD No", new {@class = "required"})
                        @Html.TextBoxFor(m => m.IpdNo, new {@class = "form-control", onfocus = "onFocusOfElement(this.id)"})
                    </div>
                    <div class="col-sm-2">
                        <br/>
                        <button id="AddAdmisionDetails" type="button" class="btn btn-primary" onfocus="onFocusOfElement(this.id)">Admission details</button>
                    </div>
                    <div class="col-sm-2" style="margin-left: -15px">
                        @Html.Label("Management Type", new {@class = "required"})
                        @Html.DropDownList("ddlMangementType", new SelectList(string.Empty, "Value", "Text"), "Select", new {@class = "form-control", onfocus = "onFocusOfElement(this.id)"})
                    </div>
                </div>

            </div>
            <div class="panel-body">
                <div class="row">
                    @*-----------------------LEFT SIDE PART-----------------------*@
                    <div class="col-sm-6 ">
                        <div class="row">
                            <div class="col-sm-3">
                                <button id="btnReset" type="button" class="btn btn-success" onfocus="onFocusOfElement(this.id)">Add New</button>

                            </div>
                            <div class="col-sm-9">
                                <div style="text-align: center">
                                    <p style="color: blue; font-size: 20px;"><b>General Billing</b></p>
                                </div>
                            </div>
                        </div>

                        <div class="panel-body entryAreabackgroundCSSforinsideElement">
                            <div class="row"style="padding-left: 9px">
                                <div class="col-sm-4">
                                    <H5>Pharmacy Details :</H5>
                                </div>
                                <div class="col-sm-4">
                                    <button id="btnPhamacyDetails" type="button" class="btn btn-primary"  onfocus = "onFocusOfElement(this.id)">Select</button>
                                </div>
                            </div>
                        </div>
                        <div id="ServicesConsumedpartialView"></div><br/>
                        <div class="panel-body entryAreabackgroundCSSforinsideElement">
                            <div class="row"style="padding-left: 9px">
                                <div class="col-sm-4">
                                    <H5>Surgical Details :</H5>
                                </div>
                                <div class="col-sm-7">
                                    <button id="btnOTDetailleft" type="button" class="btn btn-primary"  onfocus = "onFocusOfElement(this.id)">Select</button>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="panel-body entryAreabackgroundCSSforinsideElement">
                            <div class="row"style="padding-left: 9px">
                                <div class="col-sm-4">
                                    <H5>DC Detail :</H5>
                                </div>
                                <div class="col-sm-7">
                                    @Html.TextAreaFor(m => m.LeftDcDetail)
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="row"style="padding-left: 9px">
                            <div class="col-sm-12">
                                <button id="btnShowBillAmt" type="button" class="btn btn-primary">Show Bill Amount</button>
                                <input type="text" id="balance" disabled="disabled"/>
                                <button id="btnSave" type="button" class="btn btn-success">Submit</button>
                                <button id="btnReport" type="button" class="btn btn-primary">Print</button>
                            </div>
                        </div>
                    </div>
                    @*------------------------RIGHT SIDE PART---------------------*@
                    <div class="col-sm-6">
                        <div style="text-align: center">
                            <p style="color: blue; font-size: 20px;"><b>Expert Review</b></p>
                        </div>

                        <div id="ServicesConsumedpartialViewRight" style="margin-top: -17px"></div><br/>
                        <div class="panel-body entryAreabackgroundCSSforinsideElement">
                            <div class="row" style="padding-left: 9px">
                                <div class="col-sm-4">
                                    <H5>OT Details :</H5>
                                </div>
                                <div class="col-sm-7">
                                    <button id="btnOTDetailRight" type="button" class="btn btn-primary">Select</button>
                                    <button id="btnOTDetailRightAttach" onclick="LoadOtDetailAttachmentPoPupModal()" type="button" class="btn btn-primary">Attach</button>
                                    <button id="btnOTDetailRightAttachView" onclick="LoadviewOtDetailAttachmentPoPupModal()" type="button" class="btn btn-primary">View</button>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="panel-body entryAreabackgroundCSSforinsideElement">
                            <div class="row"style="padding-left: 9px">
                                <div class="col-sm-4">
                                    <H5>DC Detail :</H5>
                                </div>
                                <div class="col-sm-3">
                                    @Html.TextAreaFor(m => m.RightDcDetail)
                                </div>
                                <div class="col-sm-2">
                                </div>
                                <div class="col-sm-2">
                                    <button id="btnDCDetailRightAttach" onclick="LoadDCDetailAttachmentPoPupModal()" type="button" class="btn btn-primary" style="margin-bottom: -5px">Attach</button>
                                    <button id="btnDCDetailRightAttachView" onclick="LoadviewDCDetailAttachmentPoPupModal()" type="button" style="margin-top: 10px;margin-bottom: -5px" class="btn btn-primary">View</button>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="row"style="padding-left: 9px">
                            <div class="col-sm-12">
                                <button id="btnExpertReview" type="button" class="btn btn-primary">Request For Expert Review</button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <div class="panel-group">
        <div class="panel-heading" style="height: 12px">
            <div class="panel-title">

            </div>
        </div>
    </div>

    </fieldset>
    <div title="Click on add for new row/Select a row and click  remove to Delete row" id="AdmissionDetaisPoPupModal" style="display: none;">
        <div style="margin-top:5px;">
            <button type="button" class="btn btn-primary" id="btnAddRowAdmissionDetais">Add</button>
            <button type="button" class="btn btn-primary" id="btnRemoveRowAdmissionDetaisPoPupModal">Remove</button>
        </div>
        <div id="AdmissionDetaisPoPupModalGrid" style="margin-top:5px;"></div>
    </div>

    <div title="Click on add for new row/Select a row and click  remove to Delete row" id="OTdetailleftPoPupModal" style="display: none;">
        <div style="margin-top:5px;">
            <button type="button" class="btn btn-primary" id="btnAddRowOTdetailleft">Add</button>
            <button type="button" class="btn btn-primary" id="btnRemoveRowOTdetailleft">Remove</button>
        </div>
        <div id="OTdetailleftPoPupModalGrid" style="margin-top:5px;"></div>
    </div>

    <div title="Click on add for new row/Select a row and click  remove to Delete row" id="OTdetailRightPoPupModal" style="display: none;">
        <div style="margin-top:5px;">
            <button type="button" class="btn btn-primary" id="btnAddRowOTdetailRight">Add</button>
            <button type="button" class="btn btn-primary" id="btnRemoveRowOTdetailRight">Remove</button>
        </div>
        <div id="OTdetailRightPoPupModalGrid" style="margin-top:5px;"></div>
    </div>

    <div title="Select Services" id="ServicePoPupModal" style="display: none;">
        <div id="ServicePoPupModalGrid"></div>
        <div style="margin-top: 5px;">
        </div>
    </div>
    <div title="Select Services" id="PharmacyServicePoPupModal" style="display: none;">
        <div style="margin-top:5px;">
            <button type="button" class="btn btn-primary" id="btnAddRowPharmacydetail">Add</button>
            <button type="button" class="btn btn-primary" id="btnRemoveRowPharmacydetail">Remove</button>
        </div><br/>
        <div id="PharmacyServicePoPupModalGrid"></div>
    </div>
    <div title="Browse to upload" id="popupModelRight_OtDetails" style="display: none;">
        <div class="row">
            <div class="col-sm-3">
                @Html.Label("Upload")
                <div>
                    <input type='file' id="inputBrowseRight_OtDetails" multiple="multiple"/>
                </div>
            </div>
        </div>
    </div>

    <div title="Click On File Name for preview" id="displayModelRight_OtDetails" style="display: none;">
        <div class="row">
            <div class="col-sm-6">
                <ul id="displayBrowseRight_OtDetails" class="attachment" style="max-height: 150px; overflow-y: scroll;"/>
            </div>
        </div>
    </div>

    <div title="Browse to upload" id="popupModelRight_DCDetails" style="display: none;">
        <div class="row">
            <div class="col-sm-3">
                @Html.Label("Upload")
                <div>
                    <input type='file' id="inputBrowseRight_DCDetails" multiple="multiple"/>
                </div>
            </div>
        </div>
    </div>

    <div title="Click On File Name for preview" id="displayModelRight_DCDetails" style="display: none;">
        <div class="row">
            <div class="col-sm-6">
                <ul id="displayBrowseRight_DCDetails" class="attachment" style="max-height: 150px; overflow-y: scroll;"/>
            </div>
        </div>
    </div>
    <div id="pushNotificaton"style="position: fixed;bottom: 0;right: 0;padding: 20px;background-color: #FFFFFF;border-radius:10px ">
        <div style="width: 100%;height: 5px;background-color: #4169e1;border-radius: 10px"></div>
        <button type="button" class="close" aria-label="Close">
            <span id="btnCloseNotificaton" aria-hidden="true">X</span>
        </button>
        <p style="color: red;font-size: 15px"><b>Notification</b></p>
        <div id="NotificationPtag" style="color: green;font-size: 15px;overflow: auto;height: 50px;width: 400px"></div>
    </div>
    <div id="Reportpopup-dialog-crud" style="display:none;">
        <div class="panel panel-primary" id="Report">
            <div class="row">
                <div class="col-sm-12">
                    <iframe id="iframeReportViewer" style="width:100%;height:640px"></iframe>
                </div>
            </div>
        </div>
    </div>
    <!-- The Modal -->
    <div id="popupmodelDatetimepicker"  class="modal1" style="opacity: 1;display: none">
        <div class="row">
            <div class="col-sm-8">
                <input type="text" id="poPupDateTimepicker" class="form-control" />
            </div>
            <div class="col-sm-2">
                <button id="updateTheGridDate" type="button" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span></button>
            </div>
            <div class="col-sm-2">
                <button id="CancelTheGridDate" type="button" class="btn btn-primary"><span class="glyphicon glyphicon-remove"></span></button>
            </div>
        </div>
    </div>



    <script src="~/Scripts/ApplicationAreaScript/HospitalForms/CommonMastersCall.js"></script>
<script src="~/Scripts/ApplicationAreaScript/HospitalForms/RequestSubmissionSupportive.js"></script>
<script src="~/Scripts/ApplicationAreaScript/HospitalForms/RequestSubmission.js"></script>
    <script>
        var appSetting = '@CGHSBilling.Common.Constants.ScandocUrl';
    </script>

}