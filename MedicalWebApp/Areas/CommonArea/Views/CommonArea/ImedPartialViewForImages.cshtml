@model List<CGHSBilling.API.ScanDoc.ScanDocEntity>
<div class="container">
    <h2>Previw of Attachment</h2>
    @{
        var docpath = @CGHSBilling.Common.Constants.ScandocUrl;
        int count = 0;
        int counter = 0;
    }
    
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @foreach (var items in Model)
            {
                if (count == 0)
                {
                    <li data-target="#myCarousel" data-slide-to=@count class="active"></li>
                }
                else
                {
                    <li data-target="#myCarousel" data-slide-to=@count></li>
                }
                count++;
            }
        </ol>
        <div class="carousel-inner">
           @foreach (var items in Model)
           {
               string imgpath = docpath + items.FilePath;
               if (counter == 0)
               {
                   <div class="item active">
                       <img src=@imgpath style="width:550px;height: 550px;">
                       <div class="carousel-caption">
                       </div>
                   </div>
               }
               else
               {
                   <div class="item">
                       <img src=@imgpath style="width:550px;height: 550px;">
                       <div class="carousel-caption">
                       </div>
                   </div>
               }
               counter++;
           }
        </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
</div>

